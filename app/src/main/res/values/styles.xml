<resources>

    <!-- Текст -->
    <style name="TextHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSubtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/subhead_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Домашний экран -->
    <style name="HomeScreen_Icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="HomeScreen_TitleText" parent="TextTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="HomeScreen_StatisticsText" parent="TextSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:lines">3</item>
    </style>

</resources>